[Unit]
Description=Fonds Relations Backend
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/fonds_relations/backend
Environment=PATH=/var/www/fonds_relations/backend/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/var/www/fonds_relations/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target 